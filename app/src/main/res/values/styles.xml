<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_and_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="buttonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="textViewMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="imageMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imagePlus">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="buttonPlusMinus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="editTextPlusMinus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="imageChange">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="buttonChange">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="editTextModification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tv_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">20dp</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="image_button_search">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/red_light</item>
    </style>

</resources>