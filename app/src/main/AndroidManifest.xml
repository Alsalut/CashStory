<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/finance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/finance"
        android:supportsRtl="true"
        android:theme="@style/Theme.CashStory">
        <activity
            android:name="search.SearchResultActivity"
            android:exported="false" />
        <activity
            android:name="modification.ModificationActivity"
            android:exported="false"
            android:label="@string/modification" />
        <activity
            android:name="search.SearchActivity"
            android:exported="false"
            android:label="@string/search"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="plus.PlusActivity"
            android:exported="false"
            android:label="@string/plus"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="minus.MinusActivity"
            android:exported="false"
            android:label="@string/minus"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="history.HistoryActivity"
            android:exported="false"
            android:label="@string/history" />
        <activity
            android:name="change.ChangeActivity"
            android:exported="false"
            android:label="@string/change"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>